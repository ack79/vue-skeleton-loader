{
  "name": "vue-skeleton-loader",
  "version": "0.1.0",
  "description": "A modern and customizable skeleton loading component for Vue.js. Compatible with both Vue 2 and Vue 3.",
  "main": "dist/vue-skeleton-loader.umd.js",
  "module": "dist/vue-skeleton-loader.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "type-check": "vue-tsc --noEmit",
    "release": "npm run build && npm publish",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "keywords": [
    "vue",
    "vue2",
    "vue3",
    "skeleton",
    "loading",
    "placeholder",
    "component"
  ],
  "author": {
    "name": "Ahmet Can Kucukkor",
    "email": "ahmetcankucukkor@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ack79/vue-skeleton-loader.git"
  },
  "homepage": "https://github.com/ack79/vue-skeleton-loader#readme",
  "bugs": {
    "url": "https://github.com/ack79/vue-skeleton-loader/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "vue": "^2.7.0 || ^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/compiler-sfc": "^3.5.13",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vitest": "^0.34.0",
    "vue": "^3.5.13",
    "vue-tsc": "^1.0.0"
  }
}
